{
  "openapi": "3.0.0",
  "components": {
    "schemas": {
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      },
      "LoginRequest": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "teste@ton.com"
          },
          "password": {
            "type": "string",
            "example": "senha123"
          }
        }
      },
      "LoginResponse": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string"
          },
          "expiresIn": {
            "type": "integer"
          }
        }
      },
      "Product": {
        "type": "object",
        "properties": {
          "PK": {
            "type": "string"
          },
          "SK": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "price": {
            "type": "number"
          },
          "category": {
            "type": "string"
          }
        }
      },
      "Pagination": {
        "type": "object",
        "properties": {
          "limit": {
            "type": "integer"
          },
          "hasNext": {
            "type": "boolean"
          },
          "nextCursor": {
            "type": "string",
            "nullable": true
          }
        }
      },
      "ListProductsResponse": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Product"
            }
          },
          "pagination": {
            "$ref": "#/components/schemas/Pagination"
          }
        }
      },
      "limit": {
        "type": "integer",
        "default": 20
      },
      "cursor": {
        "type": "string"
      }
    }
  },
  "info": {
    "title": "Ton Marketplace API",
    "description": "API para o desafio SWE da Stone (Ton/Renda Extra)",
    "version": "1.0.0"
  },
  "paths": {
    "/auth/login": {
      "post": {
        "summary": "Autentica um usuário",
        "description": "Realiza o login via email e senha e retorna um token JWT.",
        "operationId": "authLogin",
        "parameters": [],
        "tags": [],
        "requestBody": {
          "description": "Credenciais do usuário",
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login bem-sucedido",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponse"
                }
              }
            },
            "headers": {}
          },
          "401": {
            "description": "Email ou senha inválidos",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            },
            "headers": {}
          }
        }
      }
    },
    "/products": {
      "get": {
        "summary": "Lista produtos com paginação",
        "description": "Retorna uma lista paginada de produtos. Requer token JWT.",
        "operationId": "getProducts",
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "description": "Número de itens por página",
            "required": false,
            "schema": {
              "$ref": "#/components/schemas/limit"
            }
          },
          {
            "name": "cursor",
            "in": "query",
            "description": "Cursor (Base64) para a próxima página",
            "required": false,
            "schema": {
              "$ref": "#/components/schemas/cursor"
            }
          }
        ],
        "tags": [],
        "responses": {
          "200": {
            "description": "Lista de produtos",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ListProductsResponse"
                }
              }
            },
            "headers": {}
          },
          "401": {
            "description": "",
            "headers": {}
          },
          "429": {
            "description": "",
            "headers": {}
          }
        }
      }
    }
  }
}