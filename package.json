{
  "name": "node-ton-marketplace-api-stone",
  "version": "1.0.0",
  "description": "Desafio para vaga de SWE",
  "main": "index.js",
  "scripts": {
    "dev": "serverless offline",
    "test": "cross-env TABLE_NAME=ton-marketplace-api-dev IS_OFFLINE=true node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:wait": "node infra/scripts/wait-for-dynamodb.js",
    "services:create-table": "aws dynamodb create-table --table-name ton-marketplace-api-dev --attribute-definitions AttributeName=PK,AttributeType=S AttributeName=SK,AttributeType=S --key-schema AttributeName=PK,KeyType=HASH AttributeName=SK,KeyType=RANGE --billing-mode PAY_PER_REQUEST --endpoint-url http://localhost:8000 --region localhost",
    "test:ci": "npm run services:up && npm run services:wait && npm run services:create-table && npm run test && npm run services:down",
    "commit": "cz",
    "prepare": "husky",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "format:fix": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Guilherme-G-Cadilhe/Node-Ton-Marketplace-API-Stone.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/Guilherme-G-Cadilhe/Node-Ton-Marketplace-API-Stone/issues"
  },
  "homepage": "https://github.com/Guilherme-G-Cadilhe/Node-Ton-Marketplace-API-Stone#readme",
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/aws-lambda": "^8.10.157",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.0",
    "aws-sdk-client-mock": "^4.1.0",
    "commitizen": "^4.3.1",
    "cross-env": "^10.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.25.12",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "serverless": "^3.40.0",
    "serverless-esbuild": "^1.55.1",
    "serverless-offline": "^13.9.0",
    "serverless-openapi-documenter": "^0.0.116",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.922.0",
    "@aws-sdk/lib-dynamodb": "^3.922.0",
    "aws-lambda": "^1.0.7",
    "bcryptjs": "^3.0.3",
    "jsonwebtoken": "^9.0.2",
    "zod": "^4.1.12"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
